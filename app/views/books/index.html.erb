<h1>Bookers</h1>
<table>
    <% @books.each do |book| %>
        <tr>
        <td class book-title><%= book.title %></td>
        <td class book-body><%= book.body %></td>
        <td class book-show><%= link_to 'show', book_path(book) %></td>
        <td class book-edit><%= link_to 'edit', book_path(book) %></td>
        <td class book-destroy><%= book.title %></td>
        </tr>
    <% end %>
</table>

<h3>New Book</h3>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>