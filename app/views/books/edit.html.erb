<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for(@book) do |f| %>

    <label for="book-title">Title</label>
    <div class="book-title"><%= f.text_field :title %></div>
    <label for="book-body">Body</label>
    <div class="book-body"><%= f.text_area :body %></div>
    <div><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to 'Show', book_path(@book) %>
<span>|</span>
<%= link_to 'Back', books_path %>